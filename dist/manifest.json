{
	"manifest_version": 3,
	"name": "cross-request",
	"description": "GTest 跨域请求v3版本",
	"version": "4.0.0",
	"action": {
		"default_icon": "/assets/icon.png",
		"default_popup": "/popup.html"
	},
	"permissions": ["proxy", "tabs", "storage", "declarativeNetRequest", "declarativeNetRequestFeedback", "declarativeNetRequestWithHostAccess"],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "/background.js"
	},
	"web_accessible_resources": [{
		"resources": ["./inject.js"],
		"matches": ["<all_urls>"],
		"extension_ids": []
	}],
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": [
			"./content.js"
		],
		"all_frames": true
	}]
}