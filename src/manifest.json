{
	"manifest_version": 3,
	"name": "account saver",
	"description": "account saver",
	"version": "1.0.0",
	"action": {
		"default_icon": "/assets/horse.png",
		"default_popup": "/index.html"
	},
	"permissions": ["proxy", "tabs", "storage", "declarativeNetRequest", "declarativeNetRequestFeedback", "declarativeNetRequestWithHostAccess"],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "/background.js"
	},
	"web_accessible_resources": [{
		"resources": ["./inject.js"],
		"matches": ["<all_urls>"],
		"extension_ids": []
	}],
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": [
			"/content.js"
		],
		"all_frames": true
	}]
}